. /etc/rc.d/init.d/functions

PARAM=$1
NAME=iotajson
EXECUTABLE=bin/iotagentMqtt.js
IOTA_PATH=/opt/iotajson
PIDFILE=$IOTA_PATH/$NAME.pid
LOG_PATH=/var/log/iotajson/iotajson.log

iotajson_start()
{
    printf "%-50s" "Starting ${NAME}..."
    cd $IOTA_PATH
    if [[ -x ${EXECUTABLE} ]]; then
        cd $IOTA_PATH
        su $IOTA_USER -c "cd $IOTA_PATH; nohup ${EXECUTABLE} &>> $LOG_PATH & echo \$! > $PIDFILE"
        echo "Success"
    else
        printf "%s\n" "Fail - missing ${EXECUTABLE} executable"
        exit 1
    fi
}

iotajson_stop()
{
    printf "%-50s" "Stopping $NAME..."
    if [ -f "${PIDFILE}" ]; then
        kill -9 $(cat ${PIDFILE})
        rm -f ${PIDFILE}
        printf "%s\n" "$(success)"
    else
        printf "%s\n" "$(failure)"
    fi
}

iotajson_status()
{
    status -p ${PIDFILE} ${EXECUTABLE}
}

case ${PARAM} in

    'start')
        echo "Starting..."
        status -p ${PIDFILE} ${EXECUTABLE} && exit 0
        iotajson_start
        ;;

    'stop')
        echo "Stopping..."
        status -p ${PIDFILE} ${EXECUTABLE} || exit 0
        iotajson_stop
        ;;

    'restart')
        iotajson_stop
        iotajson_start
        ;;

    'status')
        iotajson_status
        ;;

esac